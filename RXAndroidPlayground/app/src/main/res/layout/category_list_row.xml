<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/categoryTitle"
            style="@style/card_item_title_element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/details_category_title" />

        <TextView
            android:id="@+id/vehicleSize"
            style="@style/card_item_left_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryTitle"
            android:layout_toLeftOf="@+id/primaryBodyType"
            android:layout_toStartOf="@id/primaryBodyType" />

        <TextView
            android:id="@id/primaryBodyType"
            style="@style/card_item_right_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryTitle" />

        <TextView
            android:id="@+id/vehicleStyle"
            style="@style/card_item_left_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicleSize"
            android:layout_toLeftOf="@+id/vehicleType"
            android:layout_toStartOf="@id/vehicleType" />

        <TextView
            android:id="@id/vehicleType"
            style="@style/card_item_right_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicleSize" />

    </RelativeLayout>

</android.support.v7.widget.CardView>