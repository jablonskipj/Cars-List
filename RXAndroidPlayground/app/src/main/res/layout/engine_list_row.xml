<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/engineTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/details_engine_title"
            style="@style/card_item_title_element"/>

        <TextView
            android:id="@+id/engineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engineTitle"
            android:layout_toLeftOf="@+id/engineCompression"
            android:layout_toStartOf="@id/engineCompression"
            android:textSize="@dimen/item_description_size_14sp"
            style="@style/card_item_left_element"/>

        <TextView
            android:id="@id/engineCompression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engineTitle"
            android:textSize="@dimen/item_description_size_14sp"
            style="@style/card_item_right_element"/>

        <TextView
            android:id="@+id/engineCylindersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engineName"
            android:layout_toLeftOf="@+id/engineSize"
            android:layout_toStartOf="@id/engineSize"
            android:textSize="@dimen/item_description_size_14sp"
            style="@style/card_item_left_element"/>

        <TextView
            android:id="@id/engineSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engineName"
            android:textSize="@dimen/item_description_size_14sp"
            style="@style/card_item_right_element"/>

        <TextView
            android:id="@+id/engineDisplacement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engineCylindersCount"
            android:layout_toLeftOf="@+id/engineConfiguration"
            android:layout_toStartOf="@id/engineConfiguration"
            android:textSize="@dimen/item_description_size_14sp"
            style="@style/card_item_left_element"/>

        <TextView
            android:id="@id/engineConfiguration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engineCylindersCount"
            android:textSize="@dimen/item_description_size_14sp"
            style="@style/card_item_right_element"/>

        <TextView
            android:id="@+id/engineHorsePower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engineDisplacement"
            android:layout_toLeftOf="@+id/engineTorque"
            android:layout_toStartOf="@id/engineTorque"
            android:textSize="@dimen/item_description_size_14sp"
            style="@style/card_item_left_element"/>

        <TextView
            android:id="@id/engineTorque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/engineDisplacement"
            android:textSize="@dimen/item_description_size_14sp"
            style="@style/card_item_right_element"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>