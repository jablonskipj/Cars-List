<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/transmissionTitle"
        style="@style/card_item_title_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_transmission_title"
        android:textSize="@dimen/item_title_size_16sp"/>

    <TextView
        android:id="@+id/transmissionName"
        style="@style/card_item_left_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/transmissionTitle" />


</RelativeLayout>